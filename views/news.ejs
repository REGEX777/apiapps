<% layout('layout', { title: 'Random Dog Fact' }) %>
<div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-md mt-10">
    <h1 class="text-3xl font-bold mb-6 text-center">Latest News on "<%= query %>"</h1>
    <% articles.forEach(article => { %>
        <div class="mb-6">
            <h2 class="text-2xl font-bold"><%= article.title %></h2>
            <p class="text-sm text-gray-600"><%= new Date(article.publishedAt).toLocaleDateString() %></p>
            <p class="mt-2 text-lg"><%= article.description %></p>
            <a href="<%= article.url %>" class="text-blue-600 hover:underline">Read more</a>
        </div>
    <% }) %>
</div>