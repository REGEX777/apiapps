<%- include('partials/header', { title: 'news' }) %>

<div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-md mt-10">
    <h1 class="text-4xl font-bold mb-8 text-center">Latest News on "<%= query %>"</h1>
    <% articles.forEach(article => { %>
        <div class="mb-8 p-4 border-b border-gray-200">
            <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= article.title %></h2>
            <p class="text-sm text-gray-500 mb-4"><%= new Date(article.publishedAt).toLocaleDateString() %> - <%= new Date(article.publishedAt).toLocaleTimeString() %></p>
            <p class="mt-2 text-lg text-gray-700 leading-relaxed"><%= article.description %></p>
            <a href="<%= article.url %>" target="_blank" class="mt-4 inline-block text-blue-500 hover:text-blue-700 hover:underline transition-colors">Read more</a>
        </div>
    <% }) %>
    <% if (articles.length === 0) { %>
        <p class="text-center text-xl text-gray-500 mt-10">No articles found for "<%= query %>".</p>
    <% } %>
</div>

<%- include('partials/footer') %>
