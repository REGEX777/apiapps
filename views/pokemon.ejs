<%- include('partials/header', { title: 'pokem' }) %>

<div class="max-w-lg mx-auto p-6 bg-white rounded-lg shadow-md mt-10">
    <h1 class="text-3xl font-bold mb-4"><%= name %></h1>
    <img src="<%= imageUrl %>" alt="<%= name %>" class="w-32 h-32 mx-auto">
    <h2 class="text-xl font-semibold mt-4">Abilities</h2>
    <ul class="list-disc list-inside mt-2">
        <% abilities.forEach(ability => { %>
            <li><%= ability.ability.name %></li>
        <% }); %>
    </ul>

    <h2 class="text-xl font-semibold mt-4">Evolution Chain</h2>
    <ul class="list-disc list-inside mt-2">
        <% let current = evolutionChain; while (current) { %>
            <li><%= current.species.name %></li>
            <% current = current.evolves_to[0]; %>
        <% } %>
    </ul>

    <h2 class="text-xl font-semibold mt-4">Type Matchups</h2>
    <div class="mt-2">
        <strong>Double Damage To:</strong>
        <ul class="list-disc list-inside">
            <% typeMatchups.double_damage_to.forEach(type => { %>
                <li><%= type.name %></li>
            <% }); %>
        </ul>

        <strong>Double Damage From:</strong>
        <ul class="list-disc list-inside">
            <% typeMatchups.double_damage_from.forEach(type => { %>
                <li><%= type.name %></li>
            <% }); %>
        </ul>
    </div>
</div>
<%- include('partials/footer') %>
