<%- include('partials/header', { title: 'Weather' }) %>

<div class="bg-white p-6 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold mb-4">Weather in <%= currentWeather.name %></h2>
    <p class="text-lg mb-4">Temperature: <%= currentWeather.main.temp %>°C</p>
    <p class="text-lg mb-4">Weather: <%= currentWeather.weather[0].description %></p>
    <p class="text-lg mb-4">Air Quality Index: <%= airQuality.list[0].main.aqi %></p>
    <h3 class="text-xl font-semibold mt-6 mb-2">7-Day Forecast</h3>
    <ul class="list-disc ml-6">
        <% forecast.list.forEach(day => { %>
            <li><%= new Date(day.dt * 1000).toLocaleDateString() %>: <%= day.temp.day %>°C, <%= day.weather[0].description %></li>
        <% }) %>
    </ul>
    <a href="/" class="text-blue-500 underline hover:text-blue-600">Go back</a>
</div>

<%- include('partials/footer') %>
